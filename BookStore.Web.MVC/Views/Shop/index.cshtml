@model ShopIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <br />   <br />
    <div>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

        <img class="center" src="~/Content/assets/img/MainPageImages/SiteLogo.png" width="500" height="300" alt="logo" />
    </div>
    <br />
    <h3 class="text-center">@Model.MasterCategory.Name&nbsp;Books</h3>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="product_sidebar">
                <div class="single_sedebar">
                    <div class="select_option">
                        <div class="select_option_list">@Model.MasterCategory.Name<i class="right fas fa-caret-down"></i> </div>
                        <div class="select_option_dropdown">
                            <ul>
                                @foreach (var cat in Model.Categories.Where(x => x.MasterCategoryId == Model.MasterCategory.Id))
                                {
                                    <li>
                                        <a href="index"><font face="tahoma" size="3" color="#0000A0">@cat.Name</font></a>
                                        <ul style="padding-left:30px">
                                            @foreach (var item in Model.SpesificCategories.Where(x => x.CategoryId == cat.Id))
                                            {
                                                <li><a href="#">@item.Name</a></li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>